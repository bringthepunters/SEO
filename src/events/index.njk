---
title: "All Events"
permalink: "events/index.html"
layout: layout.njk
---
<!-- DEBUG: allEvents collection length: {{ collections.allEvents | length }} -->

<!-- 4-column grid: one day per column, today + next 3 days -->
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8 border-l border-r border-black">

  {% for day in days %}
    <section class="border-l border-black pl-4">
      <h2 class="text-lg font-bold border-b border-black pb-2 mb-4 uppercase tracking-wide">
        {{ day.label | safe }}
      </h2>
      {% set events = eventsByDate[day.date] %}
      {% if events and events.length > 0 %}
        {% for event in events %}
          <article class="mb-8">
            <h3 class="text-xl font-bold leading-snug mb-1 flex items-center">
              <a href="/events/{{ event.slug }}/" class="hover:text-gray-700 focus:text-gray-700 transition-colors" style="text-decoration: none;">
                {{ event.name }}
              </a>
              <a href="/events/{{ event.slug }}/" class="ml-2 text-2xl font-serif" aria-label="View event details" style="font-family: 'Times New Roman', Times, serif;">&#8594;</a>
            </h3>
            <p class="text-sm italic">
              {% if event.venue_location_url %}
                <a href="{{ event.venue_location_url }}" class="underline hover:text-gray-700" target="_blank" rel="noopener">
                  {{ event.venue }}
                </a>
              {% else %}
                {{ event.venue }}
              {% endif %}
            </p>
            <p class="text-sm">{{ event.formatted_time }}</p>
            <p class="text-sm">{{ event.address }}</p>
            <div class="flex flex-wrap gap-2 mt-2">
              {% for genre in event.genres %}
                <span class="bg-black text-white text-xs px-2 py-0.5 rounded-full uppercase tracking-wide">{{ genre }}</span>
              {% endfor %}
            </div>
          </article>
          {% if not loop.last %}
            <div class="border-t border-gray-300 my-4" style="border-width:0.5px"></div>
          {% endif %}
        {% endfor %}
      {% else %}
        <article class="mb-8">
          <p class="text-sm">No events scheduled.</p>
        </article>
      {% endif %}
    </section>
  {% endfor %}

</div>