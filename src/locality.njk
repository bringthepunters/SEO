---
pagination:
  data: localities
  size: 1
  alias: locality
permalink: "locality/{{ locality.slug }}/index.html"
eleventyComputed:
  title: "{{ locality.name | title }}"
---

<h1 class="text-2xl font-bold mb-4 uppercase tracking-wide" style="font-family: 'Times New Roman', Times, serif;">
  Live Music
  {{ "" | todayMelbourne | humanDateLabel }}
  {{ locality.name }}
  <span class="text-lg font-normal">(Melbourne)</span>
</h1>

<ul>
  {% for event in locality.gigs %}
    <li>
      <a href="/events/{{ event.slug }}/">{{ event.name }}</a>
      <span>at {{ event.venue }}</span>
      <span>{{ event.start_time }}</span>
    </li>
  {% endfor %}
</ul>