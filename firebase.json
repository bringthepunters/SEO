{
  "hosting": {
    "public": "_site",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/events", "destination": "/events/index.html" },
      { "source": "/events/", "destination": "/events/index.html" },
      { "source": "/events/:slug", "destination": "/events/:slug/index.html" },
      { "source": "/events/:slug/", "destination": "/events/:slug/index.html" }
    ]
  }
}
